// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Announcement {
  id String @id @default(cuid()) // 32 karakter by default
  // id Int @id @default(autoincrement()) // id nya number terus autoincrement
  title String
  detail String
  createdAt DateTime @default(now()) // ini tadi nya annoucementDate
  updatedAt DateTime @updatedAt
}

enum Gender {
  MALE
  FEMALE
}

enum Role {
  MENTOR
  STUDENT
}

model User {
  id String @id @default(cuid())
  name String
  profilePicture String? // Nullable
  phoneNumber String @unique
  email String @unique
  password String
  birthday DateTime
  role Role @default(STUDENT)
  gender Gender
  createdAt DateTime @default(now()) 
  updatedAt DateTime @updatedAt
}